# Frontend Environment Configuration Template
# Copy this file to .env for local development or .env.docker for Docker builds
# All values shown are defaults - only override what you need to change

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
VITE_WS_BASE_URL=ws://localhost:8000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=2000
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_CONNECTION_TIMEOUT=10000

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=puntini_access_token
VITE_AUTH_USER_KEY=puntini_user_data
VITE_AUTH_TOKEN_EXPIRY_BUFFER=300000

# UI Configuration
VITE_UI_THEME=auto
VITE_UI_LANGUAGE=en
VITE_UI_AUTO_SAVE=true
VITE_UI_AUTO_SAVE_INTERVAL=30000

# Feature Flags
VITE_DEBUG_MODE=false
VITE_ANALYTICS_ENABLED=false
VITE_OFFLINE_MODE=false
VITE_PUSH_NOTIFICATIONS=false

# Development Settings
VITE_DEV_HOT_RELOAD=true
VITE_DEV_SOURCE_MAPS=true
VITE_DEV_CONSOLE_LOGGING=false

# Environment (development | production)
NODE_ENV=development
