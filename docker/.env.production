# Production Environment Variables for Docker Compose

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# =============================================================================
# WebSocket Configuration
# =============================================================================
VITE_WS_BASE_URL=wss://api.yourdomain.com
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=2000
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_CONNECTION_TIMEOUT=10000

# =============================================================================
# Authentication Configuration
# =============================================================================
VITE_AUTH_TOKEN_STORAGE_KEY=authToken
VITE_AUTH_USER_STORAGE_KEY=authUser
VITE_AUTH_TOKEN_EXPIRY_BUFFER=300000

# =============================================================================
# UI Configuration
# =============================================================================
VITE_UI_THEME=light
VITE_UI_LANGUAGE=en
VITE_UI_AUTO_SAVE=true
VITE_UI_AUTO_SAVE_INTERVAL=30000

# =============================================================================
# Feature Flags - Production
# =============================================================================
VITE_FEATURES_DEBUG_MODE=false
VITE_FEATURES_ANALYTICS_ENABLED=true
VITE_FEATURES_OFFLINE_MODE=false
VITE_FEATURES_PUSH_NOTIFICATIONS=true

# =============================================================================
# Development Configuration
# =============================================================================
VITE_DEV_HOT_RELOAD=false
VITE_DEV_SOURCE_MAPS=false
VITE_DEV_CONSOLE_LOGGING=false

# =============================================================================
# Application Environment
# =============================================================================
NODE_ENV=production
VITE_APP_ENV=production
